{
	"manifest_version": 2,
	"name": "connoisseur",
	"description": "Review google reviews.",
	"version": "0.1",
	"author": "JABAT",
	"host_permissions": ["<all_urls>"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon.png",
			"32": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		},
		"default_title": "Just observing your current url."
		
	},
	"permissions": ["tabs", "activeTab", "http://127.0.0.1:8080/*", "storage",  "scripting"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}